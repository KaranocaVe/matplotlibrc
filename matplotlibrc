                            #（如线条、文本等）
axes.formatter.limits : -7, 7 # 当坐标轴范围的 log10 小于第一个或大于第二个时使用科学计数法
#axes.formatter.use_locale : False # True 时按用户本地化格式化刻度标签
                                 # 例如在 fr_FR 本地化下用 ',' 作为小数分隔符。
axes.formatter.use_mathtext : True # True 时科学计数法使用 mathtext。
#axes.unicode_minus  : True    # 使用 unicode 负号而非连字符。详见
                              # http://en.wikipedia.org/wiki/Plus_and_minus_signs#Character_codes
axes.xmargin        : 0  # x 轴边距。见 `axes.Axes.margins`
axes.ymargin        : 0  # y 轴边距。见 `axes.Axes.margins`

polaraxes.grid      : True    # 极坐标轴显示网格
#axes3d.grid         : True    # 三维坐标轴显示网格
axes.unicode_minus : False # 使用 unicode 负号而非连字符。

